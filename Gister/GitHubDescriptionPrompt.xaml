<Window x:Class="EchelonTouchInc.Gister.GitHubDescriptionPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gist Description" Height="217" Width="336">
    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="/Gister;component/Resources/credsbackround.png" Opacity="0.1" Stretch="UniformToFill"/>
        </DockPanel.Background>
        <TextBlock DockPanel.Dock="Top" Height="20" Margin="10,10,10,0" Name="textBlock1" Text="Description:" TextWrapping="WrapWithOverflow" />
        <DockPanel DockPanel.Dock="Bottom" Margin="10">
            <Button Content="Cancel" Height="23" x:Name="btnCancel" Width="75" IsCancel="True" Click="OnCancelClick" TabIndex="3" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
            <Button Content="Ok" Height="23" x:Name="btnOk" Width="75" IsDefault="True" Click="OnOkClick" TabIndex="2" Margin="10,0" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
        </DockPanel>
        <CheckBox Content="Private" Name="chkPrivate" Margin="10,0,10,10" DockPanel.Dock="Bottom"/>
        <TextBox TextWrapping="Wrap" Text="" Name="txtDescription" Margin="10,0,10,10"/>
    </DockPanel>
</Window>
